#!/bin/bash

SIZE=$1
NUM=$2

echo -n "Creating master image... "
MASTER_IMAGE=${SIZE}M.img
dd if=/dev/urandom of=$MASTER_IMAGE bs=1024k count=$SIZE
echo "done"

echo "Creating $NUM hard links... "
for i in $(seq 0 $(($NUM-1))); 
do 
    CLONE=${SIZE}M_$i.img
    ln $MASTER_IMAGE $CLONE
    echo $CLONE 
done
echo "done"